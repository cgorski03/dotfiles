# change window focus within space
alt + shift - i: yabai -m window --focus south
alt + shift - u: yabai -m window --focus north
alt + shift - j: yabai -m window --focus west
alt + shift - k: yabai -m window --focus east

# change focus between external displays
alt + shift - w: yabai -m display --focus west
alt + shift - e: yabai -m display --focus east

# move window to display left and right
alt + shift - 1: yabai -m window --display west; yabai -m display --focus west
alt + shift - 2: yabai -m window --display east; yabai -m display --focus east

# move between spaces
alt + shift - a: yabai -m window --space prev; yabai -m space --focus prev
alt + shift - d: yabai -m window --space next; yabai -m space --focus next

# flip along x-axis
alt + shift - return: yabai -m space --rotate 180

# Expand window left
alt + shift - h: yabai -m window --resize left:-50:0

# Expand window right
alt + shift - l: yabai -m window --resize right:50:0
